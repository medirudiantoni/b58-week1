    <main>
      
      <section class="w-100 py-5 bg-secondary-subtle">
        <div class="conatiner">
          <div class="col-6 offset-3 py-5">
            <h1 class="text-center mb-4">ADD MY PROJECT</h1>

            <form id="add_my_project" method="post" action="/project">
              
              <div class="mb-3">
                <label for="project_name" class="form-label fw-">Project Name</label>
                <input name="project_name" type="text" value="{{ project_name }}" class="form-control" id="project_name">
              </div>
              <div class="w-100 d-flex gap-2">
                <div class="mb-3 w-100">
                  <label for="start_date" class="form-label fw-">Start Date</label>
                  <input name="start_date" type="date" class="form-control" id="start_date">
                </div>
                <div class="mb-3 w-100">
                  <label for="end_date" class="form-label fw-">End Date</label>
                  <input name="end_date" type="date" class="form-control" id="end_date">
                </div>
              </div>
              
              <div>
                <label for="description" class="mb-2">Description</label>
                <textarea name="description" class="form-control" id="description" style="height: 100px"></textarea>
              </div>
              
              <div class="my-4">
                <label class="mb-2">Technologies</label>
                <div class="d-flex flex-wrap">
                  <div class="mb-3 form-check w-50">
                    <input name="node_js" type="checkbox" class="form-check-input" id="node_js">
                    <label class="form-check-label" for="node_js">Node Js</label>
                  </div>
                  <div class="mb-3 form-check w-50">
                    <input name="next_js" type="checkbox" class="form-check-input" id="next_js">
                    <label class="form-check-label" for="next_js">Next Js</label>
                  </div>
                  <div class="mb-3 form-check w-50">
                    <input name="react_js" type="checkbox" class="form-check-input" id="react_js">
                    <label class="form-check-label" for="react_js">React Js</label>
                  </div>
                  <div class="mb-3 form-check w-50">
                    <input name="typescript" type="checkbox" class="form-check-input" id="typescript">
                    <label class="form-check-label" for="typescript">Typescript</label>
                  </div>
                </div>
              </div>
              <div class="mb-3">
                <label for="upload_image" class="form-label">Upload Image</label>
                <input class="form-control" type="file" id="upload_image">
                <input id="image_url_getter" type="hidden" name="upload_image">
                <div class="gap-2 my-3">
                  <p class="inline-block mb-2">Image Preview:</p>
                  <img id="image_preview" class="border border-primary bg-white rounded-4" style="width: 100%; aspect-ratio: 4/2.5; object-fit: cover;"></img>
                </div>
              </div>
              <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-dark rounded-pill px-3">Submit</button>
              </div>
            </form>

          </div>
        </div>
      </section>

      <section class="w-100 h-auto py-5">
      <div class="container">
        <h1 class="text-center fw-bold mb-5">MY PROJECT</h1>
        <div class="d-flex justify-content-center">
          
          <div class="row gap-2 row-gap-5 justify-content-start" style="max-width: 1000px;">
            {{#each project}}
              <div class="col rounded-2 d-flex justify-content-center">
                <div class="card" style="width: 18rem;">
                  <img src="./img/ui.jpg" class="card-img-top" alt="..." style="aspect-ratio: 1/0.7;">
                  <div class="card-body">
                    <h5 class="card-title mb-0">{{project_name}}</h5>
                    <p class="text-secondary"><small>durasi: 3 bulan</small></p>
                    <p class="card-text">{{ description }}</p>
                    <div class="mt-2 mb-3 d-flex gap-2">
                      <img src="./img/playstore.png" alt="pl" width="20px">
                      <img src="./img/android.png" alt="pl" width="20px">
                      <img src="./img/java.png" alt="pl" width="20px">
                    </div>
                    <div class="w-100 d-flex gap-2">
                      <button class="btn btn-dark w-50">edit</button>
                      <button class="btn btn-dark w-50">delete</button>
                    </div>
                  </div>
                </div>
              </div>
            {{/each}}
           
          </div>

        </div>
      </div>
    </section>

